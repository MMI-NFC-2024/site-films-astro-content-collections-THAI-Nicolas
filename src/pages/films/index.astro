---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import FilmCard from "../../components/FilmCard.astro";

const films = await getCollection("films");
---

<Layout titre="Tous les films">
  <div class="mb-8">
    <h1 class="text-3xl md:text-4xl font-bold mb-2">Tous les films</h1>
    <p class="text-zinc-400">DÃ©couvrez notre collection de {films.length} films</p>
  </div>
  
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4 md:gap-6">
    {films.map((film) => (
      <FilmCard
        id={film.id}
        titre={film.data.titre}
        affiche={film.data.affiche}
        dateSortie={film.data.dateSortie}
        genre={film.data.genre}
      />
    ))}
  </div>
</Layout>