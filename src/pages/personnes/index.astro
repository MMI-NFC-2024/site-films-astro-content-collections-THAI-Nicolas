---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import PersonneCard from "../../components/PersonneCard.astro";

const personnes = await getCollection("personnes");
---

<Layout titre="Toutes les personnes">
  <!-- Breadcrumbs -->
  <div class="breadcrumbs text-sm mb-6">
    <ul>
      <li><a href="/">Accueil</a></li>
      <li>Acteurs & Réalisateurs</li>
    </ul>
  </div>

  <!-- En-tête -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold mb-3">Acteurs & Réalisateurs</h1>
    <p class="text-lg opacity-70">Découvrez {personnes.length} acteurs, réalisateurs et scénaristes</p>
  </div>
  
  <!-- Grille de personnes -->
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 md:gap-6">
    {personnes.map((personne) => (
      <PersonneCard
        id={personne.id}
        nom={personne.data.nom}
        image={personne.data.image}
        professions={personne.data.professions}
      />
    ))}
  </div>
</Layout>