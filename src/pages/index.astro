---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import FilmCard from "../components/FilmCard.astro";
import PersonneCard from "../components/PersonneCard.astro";

const films = await getCollection("films");
const personnes = await getCollection("personnes");

const filmsRecents = films.slice(0, 6);
const personnesVedettes = personnes.slice(0, 6);
---

<Layout titre="Accueil">
  <!-- Hero Section avec DaisyUI -->
  <div class="hero min-h-[70vh] bg-gradient-to-br from-primary/20 to-secondary/20 rounded-box mb-8">
    <div class="hero-content text-center">
      <div class="max-w-3xl">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
          Découvrez le cinéma
        </h1>
        <p class="text-lg md:text-xl opacity-80 mb-8">
          Des milliers de films et d'acteurs à explorer
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/films" class="btn btn-primary btn-lg gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
            </svg>
            Explorer les films
          </a>
          <a href="/personnes" class="btn btn-secondary btn-lg gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Découvrir les acteurs
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Films récents -->
  <section class="mb-12">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-3xl font-bold">Films récents</h2>
      <a href="/films" class="btn btn-ghost btn-sm gap-2">
        Tout voir
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
      {filmsRecents.map((film) => (
        <FilmCard
          id={film.id}
          titre={film.data.titre}
          affiche={film.data.affiche}
          dateSortie={film.data.dateSortie}
          genre={film.data.genre}
        />
      ))}
    </div>
  </section>

  <!-- Acteurs populaires -->
  <section class="mb-12">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-3xl font-bold">Acteurs populaires</h2>
      <a href="/personnes" class="btn btn-ghost btn-sm gap-2">
        Tout voir
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
      {personnesVedettes.map((personne) => (
        <PersonneCard
          id={personne.id}
          nom={personne.data.nom}
          image={personne.data.image}
          professions={personne.data.professions}
        />
      ))}
    </div>
  </section>

  <!-- Stats Section -->
  <div class="stats stats-vertical lg:stats-horizontal shadow w-full bg-base-200">
    <div class="stat">
      <div class="stat-figure text-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
        </svg>
      </div>
      <div class="stat-title">Films</div>
      <div class="stat-value text-primary">{films.length}</div>
      <div class="stat-desc">Dans notre collection</div>
    </div>
    
    <div class="stat">
      <div class="stat-figure text-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
      </div>
      <div class="stat-title">Artistes</div>
      <div class="stat-value text-secondary">{personnes.length}</div>
      <div class="stat-desc">Acteurs et réalisateurs</div>
    </div>
  </div>
</Layout>
