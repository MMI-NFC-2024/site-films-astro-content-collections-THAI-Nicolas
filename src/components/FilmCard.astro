---
import type { ImageMetadata } from 'astro';

interface Props {
  id: string;
  titre: string;
  affiche?: ImageMetadata;
  dateSortie: Date;
  genre: string[];
}

const { id, titre, affiche, dateSortie, genre } = Astro.props;
const annee = dateSortie.getFullYear();
---

<div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group">
  <figure class="relative aspect-2/3 overflow-hidden">
    {affiche ? (
      <img 
        src={affiche.src} 
        alt={titre} 
        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" 
      />
    ) : (
      <div class="flex items-center justify-center w-full h-full bg-base-300">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
        </svg>
      </div>
    )}
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </figure>
  
  <div class="card-body p-4">
    <h2 class="card-title text-base line-clamp-2">{titre}</h2>
    <div class="flex items-center gap-2 text-sm opacity-70">
      <div class="badge badge-ghost badge-sm">{annee}</div>
      <div class="badge badge-primary badge-sm">{genre[0]}</div>
    </div>
    <div class="card-actions justify-end mt-2">
      <a href={`/films/${id}`} class="btn btn-primary btn-sm">
        Voir plus
      </a>
    </div>
  </div>
</div>
