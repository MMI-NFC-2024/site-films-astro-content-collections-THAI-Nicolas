---
import type { ImageMetadata } from 'astro';

interface Props {
  id: string;
  nom: string;
  image?: ImageMetadata;
  professions: string[];
}

const { id, nom, image, professions } = Astro.props;
---

<div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group">
  <figure class="relative aspect-[2/3] overflow-hidden">
    {image ? (
      <img 
        src={image.src} 
        alt={nom} 
        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" 
      />
    ) : (
      <div class="flex items-center justify-center w-full h-full bg-base-300">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
    )}
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </figure>
  
  <div class="card-body p-4">
    <h2 class="card-title text-base">{nom}</h2>
    <div class="badge badge-secondary badge-sm">{professions[0]}</div>
    <div class="card-actions justify-end mt-2">
      <a href={`/personnes/${id}`} class="btn btn-primary btn-sm">
        Voir le profil
      </a>
    </div>
  </div>
</div>
