---
import type { CollectionEntry } from "astro:content";
import FilmCard from "./FilmCard.astro";
import LinkFilms from "./LinkFilms.astro";

interface Props {
  films: CollectionEntry<"films">[];
}
const { films } = Astro.props;

//{index < films.length - 2 ? ', ' : ''}
            //{index === films.length - 2 ? ' et ' : ''}
---

{
    films.map((film, index) => (
        <>
            <ul class="flex gap-20 items-center justify-center">
                <FilmCard
                id={film.id}
                titre={film.data.titre}
                affiche={film.data.affiche}
                dateSortie={film.data.dateSortie}
                genre={film.data.genre}
            />
            </ul>
            
            
        </>)
    )
    
    
}